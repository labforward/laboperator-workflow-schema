{
  "[json][javascript][typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Needs to be defined on its own for reasons we will never know ü§∑‚Äç‚ôÇÔ∏è
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "files.insertFinalNewline": true,
  "json.schemas": [
    {
      "fileMatch": ["/*.template.json", "/template.json"],
      "url": "./dist/workflow_template_schema.json"
    },
    {
      "fileMatch": ["/*.step-template.json", "/step-template.json"],
      "url": "./dist/workflow_step_template_schema.json"
    }
  ],
  "yaml.schemas": {
    "./dist/workflow_template_schema.json": [
      "/*.template.yml",
      "/template.yml"
    ],
    "./dist/workflow_step_template_schema.json": [
      "/*.step-template.yml",
      "/step-template.yml"
    ]
  }
}
