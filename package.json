{
  "name": "@labforward/laboperator-workflow-schema",
  "version": "0.0.1",
  "description": "Laboperator Workflow Schemas and template validation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/labforward/laboperator-workflow-schema.git"
  },
  "license": "Apache-2.0",
  "author": "labforward GmbH",
  "main": "dist/validation.js",
  "scripts": {
    "build": "del-cli dist && yarn build:schema && tsc -p tsconfig.build.json && yarn copy-dts",
    "build:schema": "ts-node src/compile.ts",
    "copy-dts": "copyfiles -u 1 'src/types.d.ts' dist",
    "dev": "nodemon src/compile.ts & nodemon src/validation.ts",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "lint": "eslint --fix 'src/**/*.{ts,js}'",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "sort": "sort-package-json package.json",
    "test": "jest --runInBand",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:dev": "jest --runInBand --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/",
      "__tests__/",
      "workflow_template_schema.json",
      "workflow_step_template_schema.json"
    ]
  },
  "dependencies": {
    "ajv": "^8.11.2",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@labforward/config": "^0.1.0",
    "@labforward/eslint-config-node": "^0.1.0",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.15.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.35.0",
    "eslint-plugin-jest": "^27.2.1",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.2",
    "jest": "^27.5.1",
    "jest-junit": "^15.0.0",
    "license-checker-rseidelsohn": "^4.1.1",
    "lint-staged": "^13.1.2",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "sort-package-json": "^2.4.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "yaml": "^2.2.0"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "@labforward/config/import-sort"
    }
  }
}
