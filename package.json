{
  "name": "@labforward/laboperator-workflow-schema",
  "version": "0.0.1",
  "description": "Laboperator Workflow Schemas and template validation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/labforward/laboperator-workflow-schema.git"
  },
  "license": "Apache-2.0",
  "author": "labforward GmbH",
  "main": "dist/validation.js",
  "scripts": {
    "build": "del-cli dist && yarn build:schema && tsc -p tsconfig.build.json",
    "build:schema": "ts-node src/compile.ts",
    "dev": "nodemon src/compile.ts & nodemon src/validation.ts",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "lint": "eslint --fix 'src/**/*.{ts,js}'",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "sort": "sort-package-json package.json",
    "test": "jest --runInBand",
    "test:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:dev": "jest --runInBand --watch"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/",
      "__tests__/",
      "workflow_template_schema.json",
      "workflow_step_template_schema.json"
    ]
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@labforward/config": "^0.0.2",
    "@labforward/eslint-config-node": "^0.0.2",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.29",
    "del-cli": "^4.0.1",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "fast-glob": "^3.2.11",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.2.0",
    "lint-staged": "^12.4.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.55.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "yaml": "^2.0.1"
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "@labforward/config/import-sort"
    }
  }
}
